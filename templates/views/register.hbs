<html>
    <head>
        <title>Login</title>
        <link rel='stylesheet' href='css/register.css'/>

        <script src='js/register.js'></script>

    </head>
    <body>
        <header>
            <span id="left">CYPRESS</span>
            <span id ="right">City of Toronto</span> 
            <br>
            <br>
            
        </header>
        <section>
            <hr>
            <!-- <h2>Welcome to Cypress Program!</h2> -->
            <h3>please enter information below: </h3>

            <br>
            <div id="formDiv">
            <form method='POST' action='/register'>

                <label for='fName'>First Name: </label>
                <input id='fName' type='text' name='fName' /><br><br>
                
                <label for='lName'>Last Name: </label>
                <input id='lName' type='text' name='lName' /><br><br>

                <label for='add'>Address: </label>
                <input id='add' type='text' name='add' size='100' /><br><br>

                <label for='phone'>Phone Number: </label>
                <input id='phone' type='number' name='phone' /><br><br>

                <label for='email'>E-mail address: </label>
                <input id='email' type='email' name='email' /><br><br>

                <label for='userName'>Username: </label>
                <input id='userName' type='text' name='userName' /> @cypress.on.ca<br><br>

                <label for='pass'>Password: </label>
                <input id='pass' type='password' name='pass' /><br><br>

                <input id='terms' type='checkbox' onclick='showButton()'>Accept Terms and Conditions</input>
                
                <br><br>
                <div id='submitButton'> 
                    <button type='submit'>Register</button>
                </div>
            </form>
            </div>
        </section>
        <div>
            <p>FAQ</p>
        </div>
    </body>
</html>